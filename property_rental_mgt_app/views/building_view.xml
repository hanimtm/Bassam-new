<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="property_building_form" model="ir.ui.view">
            <field name="name">property.building.form</field>
            <field name="model">property.building</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Building Name"/>
                            <h1>
                                <div class="d-flex">
                                    <field name="priority" widget="priority" class="mr-3"/>
                                    <field class="o_text_overflow" name="name" placeholder="Building Name"/>
                                </div>
                            </h1>
                        </div>
                        <notebook>
                            <page name="building" string="Building Information" autofocus="autofocus">
                                <group name="building_info">
                                    <group string="Basic Information">
                                        <field name="building_type"/>
                                    </group>
                                    <group>
                                    </group>
                                    <group string="Location Details" name="area_details">
                                        <field name="street"/>
                                        <field name="location"/>
                                        <field name="city"/>
                                        <field name="zipcode"/>
                                        <field name="state_id"/>
                                        <field name="country_id" options="{'no_create': True}"/>
                                        <field name="phone"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="property_building_tree">
            <field name="name">property.building.tree</field>
            <field name="model">property.building</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="priority" widget="priority"/>
                    <field name="building_type"/>
                    <field name="street"/>
                    <field name="location"/>
                    <field name="city"/>
                    <field name="zipcode"/>
                    <field name="state_id"/>
                    <field name="country_id"/>
                    <field name="phone"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_building">
            <field name="name">Building</field>
            <field name="res_model">property.building</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Building.
                </p>
            </field>
        </record>

    </data>
</odoo>